
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Logon", "User", FormMethod.Post))
{
    <div class="jumbotron">
        <h4 class="display-4" style="text-align: center">Login</h4>
        <hr class="my-4">
        <form>
            <fieldset>
                <div class="form-group" align="center">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" name="Email" id="Email" aria-describedby="emailHelp" style="border: 1.5px solid white">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="Password" id="Password" style="border: 1.5px solid white">
                    </div>
                    <div class="dropdown-divider"></div>
                    <button type="submit" class="btn btn-primary" value="Logon">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
}


